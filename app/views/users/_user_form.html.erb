<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="error_message">
      <%= message %>
    </div>
  <% end %>
<% end %>
                         <!--form_withはdefaultでremote;true.これがエラメを阻害ajaxがなんかとか-->
<%= form_with model: @user, local: true do |f| %>
  <div class="form-group">
    <%= f.label "名前", class: 'form_label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label "メールアドレス", class: 'form_label' %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <p>※パスワードは半角英数字それぞれ１種類ずつ含む８文字以上のものとします。</p>
    <%= f.label "パスワード", class: 'form_label' %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label "パスワード再入力", class: 'form_label' %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>
  
  <!--<if request.path_info == edit_user_path(current_user)%>-->
    <!--<= f.submit "更新" %>-->
  <!--<elsif request.path_info == new_user_path %>-->
    <%= f.submit button_text %>
  <!--< end %>-->  
<% end %>  