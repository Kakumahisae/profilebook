<% if @character.errors.any? %>
  <% @character.errors.full_messages.each do |message| %>
    <div class="error_message">
      <%= message %>
    </div>
  <% end %>
<% end %>

<%= @story.title %>
<%= form_with model: @character,url: story_characters_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label "名前", class: 'form_label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label "性別", class: 'form_label' %>
    <div class="textarea">
      <%= f.text_field :gender, class: 'form-control' %>
    </div>
  </div>
    <!--< f.hideen_field :story_id,value: @character.story_id %>-->
  
    <%= f.submit button_text %>
  
<% end %>  